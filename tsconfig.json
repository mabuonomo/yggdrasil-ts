{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "target": "es2016",
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "lib": [
            "es2016",
            "esnext.asynciterable"
        ],
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "typings/browser.d.ts",
        "typings/browser/**"
    ],
    "baseUrl": ".",
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    }
}